<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <ImageView
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            android:id="@+id/ivInstr"
            android:background="@drawable/firstaid1"
            android:layout_alignParentLeft="true"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvInstr"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:textSize="34dp"


            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivInstr"
            android:layout_marginLeft="36dp"/>

    <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:id="@+id/bYesInstr"
            android:text="YesButton"
            android:layout_alignTop="@+id/bNoInstr"
            android:layout_toLeftOf="@+id/bNoInstr"/>

    <Button
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:text="NoButton"
            android:id="@+id/bNoInstr"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>


</RelativeLayout>